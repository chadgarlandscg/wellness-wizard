{
  "extends": "tslint:recommended",
  "formatter": "json",
  "rules": {
    "variable-name": [true, "ban-keywords", "allow-snake-case", "allow-pascal-case"],
    "quotemark": [
      true,
      "single"
    ],
    "no-var-requires": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [true, 160],
    "trailing-comma": [false, {"multiline": "never", "singleline": "never"}],
    "object-literal-sort-keys": false
  }
}
